<h1>GetAll from Views/Home</h1>
<h3>@Model.PageTitle</h3>
<div class="card-deck">
    @foreach (var emp in Model.Employees)
    {
        string phpath = "~/images/" + (emp.PhotoPath ?? "noimage.jpg");
    <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
        <div class="card-header">
            <h3>@emp.Name</h3>
        </div>
        <img class="card-img-top imageThumbnail"  src="@phpath" asp-append-version="true" />
        <div class="card-footer text-center">
            <a asp-controller="Home" asp-action="Fetch" asp-route-id="@emp.Id"
               class="btn btn-primary m-1">View</a>
            <!--
        <a href="//Url.Action("Fetch", "Home", new { id = //emp.Id })"
           class="btn btn-primary">Show</a>
    -->
            <!--
                    //Html.ActionLink("View", "Fetch", "Home", new { id = //emp.Id })
    <a href="/Home/Fetch///emp.Id" class="btn btn-primary">View</a>
    -->
            <a asp-controller="Home" asp-action="Update" asp-route-id="@emp.Id"
               class="btn btn-primary m-1">Edit</a>

            <a href="#" class="btn btn-danger m-1">Delete</a>
        </div>

    </div>
    }
</div>
@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}
