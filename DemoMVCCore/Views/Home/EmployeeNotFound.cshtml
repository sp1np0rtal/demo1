@model int
@{
    ViewBag.Title = "404 Error";
}
    <div class="card-deck">
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="alert alert-danger  mt-1 mb-1"
             <h4>404 Not Found Error:</h4>
             <hr />
            <h5>
            Employee with Id = @Model  cannot be found
            </h5>
            </div>
            <a asp-controller="Home" asp-action="List" class="btn btn-outline-success" style="width:auto">
                Click here to see all employees
            </a>
        </div>
    </div>